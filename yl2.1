#!/bin/bash
# Kasutajate kustutamise skript
if [ $# -ne 1 ]; then
    echo "Kasutusjuhend: $0 failinimi"
else
  failinimi=$1
  if [ -f $failinimi -a -r $failinimi ]; then
    echo "Fail on korras"
    while IFS= read -r nimi; do
      # Kustutame kasutaja
      userdel $nimi
      echo "Kasutaja $nimi kustutatud."
    done < "$failinimi"
  else
    echo "Probleem failiga $failinimi"
  fi
fi
